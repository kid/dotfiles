{
  "coc.source.omni.enable": true,
  "coc.source.omni.filetypes": ["terraform", "tf"],
  "javascript.suggest.enabled": false,
  "typescript.suggest.enabled": false,
  "python.jediEnabled": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "terraform": {
      "command": "~/.bin/terraform-lsp",
      "filetypes": ["terraform"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    }
  }
}
