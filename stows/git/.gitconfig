[user]
  name = Arnaud Rebts
  email = arnaud.rebts@gmail.com
  signingkey = 59C92EDBC524DF9E
[color]
  ui = true
[push]
  default = simple
  followTags = true
[core]
  logAllRefUpdates = true
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
[status]
  showUntrackedFiles = all
[alias]
  st = status -s
  cl = clone
  ci = commit
  co = checkout
  br = branch
  r = reset
  cp = cherry-pick
  gr = grp -Ii
  diff = diff --word-diff
  ls = log --decorate --oneline
  ll = log --decorate --numstat
  lg = log --decorate --graph --abbrev-commit --date=relative --all
  prune = fetch --prune
  undo = reset --soft HEAD^
  stash-all = stash save --include-untracked
[merge]
  ff = only
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[rebase]
  autosquash = true
[rerere]
  enabled = true
[diff]
  compactionHeuristic = 1
  tool = vimdiff
[transfer]
  fsckobjects = true
[hub]
  host = github.services.mckinseywave.com
[commit]
  gpgsign = true
[diff "sopsdiffer"]
	textconv = sops -d
